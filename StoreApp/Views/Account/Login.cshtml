@{
    Layout = "_LayoutAccount";
}
@model StoreApp.ViewModels.LoginModel

<br />

<h2  class="text-center">Вход на сайт</h2>

<div class="text-center">


    <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" class="m-3">

        <div class="form-group">
            <label asp-for="Email" class="sr-only">Введите login или email</label>
            <input type="text" asp-for="Email" class="w-25" placeholder="Введите login или email" /> <br />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="sr-only">Введите пароль</label>
            <input asp-for="Password" class="w-25" placeholder="Введите пароль" /> <br />
            <span asp-validation-for="Password" />
        </div>
        <div class="validation form-text" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <input type="submit" value="Войти" asp-action="Login" asp-controller="Account" class="btn btn-primary" />
            
            <input type="button" value="Регистрация" onClick='location.href="Register"' />

        </div>

       
    </form>
   
</div>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
}