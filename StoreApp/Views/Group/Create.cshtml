@model Group

<h1 class="m-3">Создание новой группы</h1>

<div class="row">
    <div class="col-md-4 m-2">
        <form asp-controller="Group" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="GroupName" class="control-label">Введите наименование группы</label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Введите описание группы</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Создать группу" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>